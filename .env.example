# YouTube AI v3.0 - Environment Variables Template
# 이 파일을 복사하여 .env 파일을 생성하고 실제 API 키를 입력하세요.
# cp .env.example .env

# =============================================================================
# AI Provider (필수)
# =============================================================================

# Gemini API Key (추천 - 무료)
# https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini Model (선택)
GEMINI_MODEL=gemini-1.5-flash

# Claude API Key (옵션)
# https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# OpenAI API Key (옵션)
# https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# AI Provider 선택 (gemini, claude, openai)
AI_PROVIDER=gemini

# =============================================================================
# Stock Video Providers (필수 - 최소 1개)
# =============================================================================

# Pexels API Key (무료)
# https://www.pexels.com/api/
PEXELS_API_KEY=your_pexels_api_key_here

# Pixabay API Key (무료)
# https://pixabay.com/api/docs/
PIXABAY_API_KEY=your_pixabay_api_key_here

# =============================================================================
# TTS Provider (선택 - 기본값: gTTS 무료)
# =============================================================================

# ElevenLabs API Key (고품질 TTS, 유료)
# https://elevenlabs.io/
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here
ELEVENLABS_VOICE_ID=your_voice_id_here

# Google Cloud TTS (유료)
# https://cloud.google.com/text-to-speech
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# =============================================================================
# YouTube (업로드용)
# =============================================================================

# YouTube Data API Key (트렌드 분석용, 선택)
# https://console.cloud.google.com/
YOUTUBE_API_KEY=your_youtube_api_key_here

# YouTube OAuth 2.0 (업로드용, 필수)
# client_secrets.json 파일을 프로젝트 루트에 배치
# https://console.cloud.google.com/apis/credentials

# =============================================================================
# Video Settings (선택 - 기본값 사용 가능)
# =============================================================================

# 기본 영상 포맷 (shorts, landscape, square)
DEFAULT_FORMAT=shorts

# 기본 영상 길이 (초)
DEFAULT_DURATION=60

# 자동 업로드 여부 (true, false)
AUTO_UPLOAD=false

# =============================================================================
# Paths (선택 - 기본값 사용 가능)
# =============================================================================

# 다운로드 디렉토리
DOWNLOAD_DIR=./downloads

# 출력 디렉토리
OUTPUT_DIR=./output

# 로그 디렉토리
LOG_DIR=./logs

# 데이터 디렉토리
DATA_DIR=./data

# ===== AI API 설정 =====
# Gemini API (무료!) - https://aistudio.google.com/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# Gemini 모델 선택 (선택사항)
# 옵션: gemini-2.5-flash (기본), gemini-2.5-pro (고급), gemini-1.5-flash (레거시)
GEMINI_MODEL=gemini-2.5-flash

# Claude API (선택) - https://console.anthropic.com/
ANTHROPIC_API_KEY=your_claude_api_key_here

# AI 프로바이더 선택: auto (Gemini 우선), gemini, claude
AI_PROVIDER=auto

# ===== YouTube API 설정 =====
YOUTUBE_API_KEY=your_youtube_api_key_here

# ===== TTS 설정 (선택) =====
# ElevenLabs (고품질 TTS)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Google Cloud TTS (선택)
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account.json

# ===== Azure TTS (선택) =====
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region

# ===== Stability AI (이미지 생성, 선택) =====
STABILITY_API_KEY=your_stability_api_key_here
